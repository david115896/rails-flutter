<p id="notice"><%= notice %></p>

<h1>Activities</h1>

 <div class= "col-5">
      <div class="ml-5 mb-2 ">     <!-- CSV Uploader tickets-->
        <h5> Import Activities </h5>
        <%= form_with scope: :ticket, url: import_city_activities_path, local: true, method: :post  do |form| %>
          
          <div class="form-inline">
            <%= form.file_field :file %>
            <%= form.submit "Upload", class:"" %>
          </div>
        <%end %>
      </div>
    </div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
              <td><%= activity.name %></td>

        <td><%= link_to 'Show', city_activity_path(activity.city.id, activity.id) %></td>
        <td><%= link_to 'Edit', edit_city_activity_path(activity.city.id, activity.id) %></td>
        <td><%= link_to 'Destroy', city_activity_path(activity.city.id, activity.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Activity', new_city_activity_path %>
